						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>	
				
				<association name="lot:draftAgreementLink">
					<title>Проект договора</title>
					<source>
						<mandatory>false</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>cm:content</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>

				<association name="lot:technicalTaskLink">
					<title>Тех. задание</title>
					<source>
						<mandatory>false</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>cm:content</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>	
<!--				<association name="lot:iciSearchResultsLink">
					<title>ИЦИ</title>
					<source>
						<mandatory>false</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>priceinf:iciSearchResults</class>
						<mandatory>true</mandatory>
						<many>false</many>
					</target>
				</association>-->
			</associations>
		</type>

