<extension> 
    <modules> 

        <module> 
            <id>Custom Data-lists Widget</id> 
            <description>Instantiate a custom Data-lists widget</description> 
            <auto-deploy>true</auto-deploy> 
            <customizations> 
                <customization> 
                    <targetPackageRoot>org.alfresco.components.data-lists</targetPackageRoot> 
                    <sourcePackageRoot>org.alfresco.components.data-lists.customization</sourcePackageRoot> 
                </customization> 
            </customizations> 
        </module> 

        <module>
            <id>Customize Web Script Template for Footer(Remove Footer)</id>
            <version>1.0</version>
            <auto-deploy>true</auto-deploy>
            <customizations>
                <customization>
                    <targetPackageRoot>org.alfresco.components.footer</targetPackageRoot>
                    <sourcePackageRoot>org.alfresco.components.footer.customization</sourcePackageRoot>
                </customization>
            </customizations>
        </module>

	    <module>
	      <id>Customize Share Header Menu(Remove sites menu)</id>
	      <version>1.0</version>
		  <auto-deploy>true</auto-deploy>
	      <customizations>
	        <customization>
	          <targetPackageRoot>org.alfresco.share.header</targetPackageRoot>
	          <sourcePackageRoot>org.alfresco.components.header.customization</sourcePackageRoot>
	        </customization>
	      </customizations>
	    </module>

        <module>
            <id>Remove content from Share (hide My Sites)</id>
            <version>1.0</version>
            <auto-deploy>true</auto-deploy>
            <customizations>
                <customization>
                    <targetPackageRoot>org.alfresco.components.dashlets</targetPackageRoot>
                    <sourcePackageRoot>org.alfresco.components.dashlets.my-sites.customization</sourcePackageRoot>
                </customization>
            </customizations>
        </module>

        <module>
            <id>Customize Datagrid(switch js file)</id>
            <version>1.0</version>
            <auto-deploy>false</auto-deploy>
            <customizations>
                <customization>
                    <targetPackageRoot>org.alfresco.components.data-lists</targetPackageRoot>
                    <sourcePackageRoot>org.alfresco.components.datagrid.customization</sourcePackageRoot>
                </customization>
            </customizations>
        </module>

	</modules>
</extension> 